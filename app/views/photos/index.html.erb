<h1>Listing photos</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Decription</th>
    <th>Path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.user.email %></td>
    <td><%= photo.title %></td>
    <td><%= photo.decription %></td>
    <td><%= image_tag photo.path.thumb.url %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

